{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "wwwroot/bin",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "Client",
    "sourceMap": false,
    "target": "es5"
  },
  "exclude": [
    "bin",
    "node_modules",
    "obj",
    "out",
    "wwwroot",
    "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "typeRoots": [
    "node_modules/@types"
  ]
}
